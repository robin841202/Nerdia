<?xml version="1.0" encoding="utf-8"?>
<!-- Important: fragment id must match bottomNavigation menu item's id -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_navigation">
    <navigation android:id="@+id/home_navigation"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.movieinfo.ui.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_verticalBrowseFragment"
                app:destination="@id/verticalBrowseFragment"
                app:enterAnim="@anim/fade_in"
                app:exitAnim="@anim/fade_out" />
        </fragment>
        <fragment
            android:id="@+id/verticalBrowseFragment"
            android:name="com.example.movieinfo.ui.home.VerticalBrowseFragment"
            tools:layout="@layout/fragment_vertical_browse">
            <action
                android:id="@+id/action_verticalBrowseFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/fade_in"
                app:exitAnim="@anim/fade_out"/>
        </fragment>
    </navigation>
    <navigation android:id="@+id/discover_navigation"
        app:startDestination="@id/discoverFragment">
        <fragment
            android:id="@+id/discoverFragment"
            android:name="com.example.movieinfo.ui.discover.DiscoverFragment"
            android:label="@string/title_discover"
            tools:layout="@layout/fragment_discover">
            <action
                android:id="@+id/action_discoverFragment_to_searchFragment"
                app:destination="@id/searchFragment"
                app:enterAnim="@anim/fade_in"
                app:exitAnim="@anim/fade_out"/>
        </fragment>
        <fragment
            android:id="@+id/searchFragment"
            android:name="com.example.movieinfo.ui.discover.SearchFragment"
            android:label="@string/title_search"
            tools:layout="@layout/fragment_search">
            <action
                android:id="@+id/action_searchFragment_to_discoverFragment"
                app:destination="@id/discoverFragment"
                app:enterAnim="@anim/fade_in"
                app:exitAnim="@anim/fade_out"/>
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.example.movieinfo.ui.watchlist.WatchlistFragment"
        android:label="@string/title_watchlist"
        tools:layout="@layout/fragment_watch_list" />

</navigation>